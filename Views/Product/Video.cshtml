<div class="container">
    <div class="row">
            <div class="col-md-7">
                <div class="thumbnail">

                    <iframe width="100%" height="450" src="//www.youtube.com/embed/@Model.VideoOriginID?autoplay=1"
                            frameborder="0" allowfullscreen></iframe>

                    <div class="caption">
                        <h3>@Model.VideoTitle</h3>
                        <p>
                            <div class="fb-share-button" data-href="http://www.bulabi.com/Product/Video?originID=@Model.VideoOriginID"
                                 data-type="button"></div>

                             <div>  @Model.VideoView </div>
                        </p>

                        <p>@Model.VideoDescription </p>

                        <p>... </p>

                    </div>

                    <ul class="nav nav-tabs">
  <li class="active"><a href="#">Home</a></li>
  <li><a href="#">Profile</a></li>
  <li><a href="#">Messages</a></li>
</ul>

     <ul class="nav nav-tabs">
        <li class="active"><a href="#red" data-toggle="tab">Red</a></li>
        <li><a href="#orange" data-toggle="tab">Orange</a></li>
        <li><a href="#yellow" data-toggle="tab">Yellow</a></li>
        <li><a href="#green" data-toggle="tab">Green</a></li>
        <li><a href="#blue" data-toggle="tab">Blue</a></li>
    </ul>
    <div id="my-tab-content" class="tab-content">
        <div class="tab-pane active" id="red">
            <h1>Red</h1>
            <p>red red red red red red</p>
        </div>
        <div class="tab-pane" id="orange">
            <h1>Orange</h1>
            <p>orange orange orange orange orange</p>
        </div>
        <div class="tab-pane" id="yellow">
            <h1>Yellow</h1>
            <p>yellow yellow yellow yellow yellow</p>
        </div>
        <div class="tab-pane" id="green">
            <h1>Green</h1>
            <p>green green green green green</p>
        </div>
        <div class="tab-pane" id="blue">
            <h1>Blue</h1>
            <p>blue blue blue blue blue</p>
        </div>
    </div>



                    <div class="fb-comments" data-href="http://www.bulabi.com/Product/Video?originID=@Model.VideoOriginID" 
                        data-numposts="5" data-colorscheme="light"></div>
                </div>
            </div>
        <div class="col-md-5">
            


            <div class="panel panel-default">
                  <!-- Default panel contents -->
                  <div class="panel-heading">Related Videos</div>
                  <div class="panel-body">
                        
                      @for (int i = 0; i < Model.RelatedTitle.Count(); i++)
                      {
                        <div class="media">
                          <a class="pull-left" href="~/Product/Video?originID=@Model.RelatedOriginID[i]">
                            <img class="media-object" src="@Model.RelatedImage[i]" alt="...">
                          </a>
                          <div class="media-body">
                            <a class="pull-left" href="~/Product/Video?originID=@Model.RelatedOriginID[i]">
                                <h5 class="media-heading">@Model.RelatedTitle[i]</h5>
                            </a>
                            <span class="meta label label-default">

                                View: @Model.RelatedView[i]
                           </span>
                          </div>
                        </div>
                       }
                  </div>
            
            </div>
        </div>
    </div>
</div>

